{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "files": ["./node_modules/@types/node/index.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "types"]
}